<%= link_to lesson_path(lesson) do %>
	<div class="row lesson">
		<div class="col-md-1 text-center">
			<div class="lesson-number">
				1
			</div>
			<div class="duration">
				<span>15m</span>
			</div>
		</div>
		<div class="col-md-7">
			<h2><%= lesson.title %></h2>
			<p><%= lesson.desc %></p>
		</div>
	</div>
<% end %>